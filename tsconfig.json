{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"target": "es5",
		"noImplicitAny": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "dist",
		"baseUrl": "./src",
		"typeRoots": ["node_modules/@types", "src/types"],
		"strictNullChecks": true,
		"lib": ["es6"],
		"declaration": true,
		"skipLibCheck": true
	},
	"include": ["src/**/*"],
	"exclude": ["**/*.test.js"]
}
